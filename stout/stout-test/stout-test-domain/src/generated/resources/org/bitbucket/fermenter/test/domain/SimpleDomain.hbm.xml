<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
			
<hibernate-mapping package="org.bitbucket.fermenter.test.domain.bizobj">
	<class name="SimpleDomainBO" table="SIMPLE" lazy="true" 
	 	 
	 	optimistic-lock="version" select-before-update="true"
	 	dynamic-update="true">

		<id name="id" column="ID" type="string">
			<generator class="uuid.hex"/>			
		</id>
		<version column="OPLOCK" name="oplock"/>	
		<property 	name="name"	
					type="string"
					column="NAME">
		</property>
		<property 	name="theLong1"	
					type="long"
					column="LONG1">
		</property>
		<property 	name="bigDecimalValue"	
					type="big_decimal"
					column="BIG_DECIMAL_COLUMN">
		</property>
		<property 	name="type"	
					type="string"
					column="TYPE">
		</property>
		<property 	name="anEnumeratedValue"	
		            column="SIMPLE_DOMAIN_ENUM">
			<type name="org.hibernate.type.EnumType">
      			<param name="enumClass">org.bitbucket.fermenter.test.domain.enumeration.SimpleDomainEnumeration</param>
    		</type>
		</property>
		<property 	name="theDate1"	
					type="date"
					column="DATE1">
		</property>

	</class>

    <query name="SelectAllSimpleDomains">
    	<![CDATA[from SimpleDomainBO]]>
	</query>
    <query name="SelectAllSimpleDomainsByName">
    	<![CDATA[from SimpleDomainBO as domain where domain.name = :name]]>
	</query>
    <query name="SelectAllSimpleDomainsByType">
    	<![CDATA[from SimpleDomainBO as domain where domain.type = :type]]>
	</query>
	
</hibernate-mapping>