<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
			
<hibernate-mapping package="org.bitbucket.fermenter.test.domain.bizobj">
	<class name="ValidationExampleBO" table="VALIDATION_EXAMPLE" lazy="true" 
	 	 
	 	optimistic-lock="version" select-before-update="true"
	 	dynamic-update="true">

		<id name="id" column="VALIDATION_EXAMPLE_ID" type="string">
			<generator class="uuid.hex"/>			
		</id>
		<version column="OPLOCK" name="oplock"/>	
		<property 	name="integerExample"	
					type="integer"
					column="INTEGER_EXAMPLE">
		</property>
		<property 	name="bigDecimalExampleWithScale"	
					type="big_decimal"
					column="BIG_DECIMAL_SCALE">
		</property>
		<property 	name="requiredField"	
					type="string"
					not-null="true"
					column="REQUIRED_FIELD">
		</property>
		<property 	name="bigDecimalExample"	
					type="big_decimal"
					column="BIG_DECIMAL_EXAMPLE">
		</property>
		<property 	name="characterExample"	
					type="character"
					column="CHAR_EXAMPLE">
		</property>
		<property 	name="stringExample"	
					type="string"
					length="20"
					column="STRING_EXAMPLE">
		</property>
		<property 	name="dateExample"	
					type="date"
					column="DATE_EXAMPLE">
		</property>
		<property 	name="longExample"	
					type="long"
					column="LONG_EXAMPLE">
		</property>

		<set name="validationExampleChilds"
			 cascade="all,delete-orphan"	
			 inverse="true"
			 lazy="true">			 	
				<key column="VALIDATION_EXAMPLE_ID" not-null="true"/>
				<one-to-many class="ValidationExampleChildBO"/>
		</set>
	</class>

	
</hibernate-mapping>