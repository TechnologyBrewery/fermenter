<?xml version="1.0"?>
<!DOCTYPE entity PUBLIC "-//FERMENTER//DTD ENTITY//EN" "https://bitbucket.org/cpointe/fermenter/downloads/fermenter-2-entity.dtd">

<entity>
	<name>DefaultValueExample</name>
	<namespace>org.bitbucket.askllc.fermenter.cookbook.domain</namespace>
	<documentation>A simple domain entity with a generated id field, fields of different types, and default values assigned to many of its fields</documentation>
	<table>DEFAULT_VALUE</table>

	<id>
		<field>
			<name>id</name>
			<type>uuid</type>
			<column>DEFAULT_VALUE_ID</column>
			<required>true</required>
			<generator>uuid</generator>
		</field>
	</id>

	<fields>
		<field>
			<name>name</name>
			<documentation>The friendly domain moniker</documentation>
			<type>string</type>
			<column>NAME</column>
			<defaultValue>Default name value</defaultValue>
		</field>
		<field>
			<name>type</name>
			<documentation>A simple domain classification</documentation>
			<type>string</type>
			<column>TYPE</column>
			<defaultValue>DefaultType</defaultValue>
		</field>
		<field>
			<name>theLong1</name>
			<documentation>A relevant number for this domain</documentation>
			<type>long</type>
			<column>LONG1</column>
			<defaultValue>31415926</defaultValue>
		</field>
		<field>
			<name>bigDecimalValue</name>
			<type>big_decimal</type>
			<column>BIG_DECIMAL</column>
			<defaultValue>3.141592645</defaultValue>
		</field>
		<field>
			<name>standardBoolean</name>
			<type>boolean</type>
			<column>STANDARD_BOOLEAN</column>
			<defaultValue>false</defaultValue>
		</field>
		<field>
			<name>aMESSYNameThatConfusesJson</name>
			<type>string</type>
			<column>MESSY_NAMED_FIELD</column>
			<defaultValue>true</defaultValue>
		</field>
		<field>
			<name>someInteger</name>
			<type>integer</type>
			<column>SOME_INTEGER</column>
			<defaultValue>1</defaultValue>
		</field>
		<field>
			<name>someTimestamp</name>
			<type>timestamp</type>
			<column>SOME_TIMESTAMP</column>
			<defaultValue>2022-07-16 04:26:19</defaultValue>
		</field>
		<field>
			<name>someDate</name>
			<type>date</type>
			<column>SOME_DATE</column>
			<defaultValue>2022-07-16</defaultValue>
		</field>
	</fields>
</entity>