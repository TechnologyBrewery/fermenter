<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
			
<hibernate-mapping package="org.bitbucket.fermenter.test.domain.bizobj">
	<class name="ValidationReferenceExampleBO" table="VALIDATION_REF_EXAMPLE" lazy="true" 
	 	 
	 	optimistic-lock="version" select-before-update="true"
	 	dynamic-update="true">

		<id name="id" column="VALIDATION_REF_EXAMPLE_ID" type="string">
			<generator class="uuid.hex"/>			
		</id>
		<version column="OPLOCK" name="oplock"/>	
		<property 	name="someDataField"	
					type="string"
					column="SOME_DATA_FIELD">
		</property>

		<many-to-one name	= "requiredReference"
					 class	= "ValidationReferencedObjectBO"
					 lazy="no-proxy">
			<column	name = "VALIDATION_REF_OBJECT_ID"/>
		</many-to-one>


	</class>

	
</hibernate-mapping>