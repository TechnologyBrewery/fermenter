<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE profiles PUBLIC "-//FERMENTER//DTD PROFILES//EN" "https://bitbucket.org/askllc/fermenter/downloads/profiles.dtd">

<profiles>

	<profile name="core-ejb">
		<target name="ejbServiceFactory"/>
		<target name="transferObjectJacksonMixIns"/>
		<target name="objectMapperManager"/>
	</profile>
	
	<!-- must be manually included as some application servers bomb if more than one activator is present -->
	<profile name="jax-rs-activator">
		<target name="jaxRsActivator"/>
		<target name="jacksonObjectMapperResteasyProvider"/>
	</profile>

	<profile name="java-service-session-beans" extends="core-ejb">
		<target name="serviceSessionBeanRemoteInterfaces"/>
		<target name="serviceSessionBeanLocalInterfaces"/>
		<target name="serviceSessionBeanHomeInterfaces"/>
		<target name="serviceSessionBeanLocalHomeInterfaces"/>
		<target name="serviceSessionBeanObjects"/>
		<target name="sessionBeanServiceDelegateObjects"/>		
	</profile>

	<profile name="java-entity-maintenance-session-beans-service-only" extends="core-ejb">
		<target name="entityMaintenanceServiceLocal"/>
		<target name="entityMaintenanceServiceJaxRs"/>
		<target name="entityMaintenanceServiceBean"/>
	</profile>

	<profile name="java-entity-maintenance-session-beans" extends="java-entity-maintenance-session-beans-service-only">
		<target name="sessionBeanEntityMaintenanceServiceDelegateImpl"/>
	</profile>

</profiles>