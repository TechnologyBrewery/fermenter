<?xml version="1.0"?>
<!DOCTYPE messages PUBLIC "-//FERMENTER//DTD MESSAGES//EN" "https://bitbucket.org/askllc/fermenter/downloads/messages.dtd">

<messages>

	<!-- Displayed when the scale in incorrect for a decimal field -->
	<message key="invalid.scale">
		<summary>The {0} value must contain at most {1} numbers after the
			decimal.</summary>
		<detail>Enter a value with at most {1} decimal places.</detail>
	</message>

	<!-- Displayed when the entry for a field is less than the minimum value -->
	<message key="value.must.be.gt.min">
		<summary>The {0} value must be greater than or equal to {2}.</summary>
		<detail>Enter a value greater than or equal to {2}.</detail>
	</message>

	<!-- Displayed when the entry for a field is greater than the maximum value -->
	<message key="value.must.be.lt.max">
		<summary>The {0} value must be less than or equal to {2}.</summary>
		<detail>Enter a value less than or equal to {2}.</detail>
	</message>

	<!-- Displayed when a required field is left blank -->
	<message key="null.not.allowed">
		<summary>{0} is a required field.</summary>
		<detail>Enter the {0}.</detail>
	</message>

	<!-- Displayed when a field entry exceeds the maximum number of allowed 
		characters -->
	<message key="value.must.be.shorter.than">
		<summary>The {0} value cannot be more than {2} characters long.</summary>
		<detail>Enter a value that is no longer than {2} characters.</detail>
	</message>

	<!-- Displayed when a field entry does not contain the minimum number of 
		characters -->
	<message key="value.must.be.longer.than">
		<summary>The {0} value must be at least {2} characters long.</summary>
		<detail>Enter a value that is at least {2} characters long.</detail>
	</message>

	<message key="invalid.format">
		<summary>The value '{0}' does not match the format for field {1}.</summary>
	</message>

	<message key="unknown.exception.occurred">
		<summary>An unknown exception occurred.</summary>
	</message>

	<message key="oplock.error">
		<summary>Another user has modified the data you are trying to save.</summary>
	</message>

	<message key="unrecoverable.exception.occurred">
		<summary>An unrecoverable exception occurred.</summary>
	</message>

	<message key="recoverable.exception.occurred">
		<summary>A recoverable exception occurred.</summary>
	</message>

	<message key="invalid.reference">
		<summary>A non-existent object was referenced in a M-1 relationship
			for field {0}.</summary>
	</message>

	<message key="database.exception">
		<summary>An exception occurred while persisting.</summary>
	</message>

	<!-- As 1-1 relations are not truly supported by Fermenter yet and are instead 
		modeled using 1-M relations, this message may be utilized during object validation 
		to indicate that more than one child object is unexpectedly associated with 
		the parent object -->
	<message key="invalid.one-to-one.relation">
		<summary>Invalid 1-1 relationship for field {0} - more than one child
			object exists in the relation.</summary>
	</message>

	<!-- Generic message utilized to capture all field-level validation errors 
		that are caught via JSR-303 validations. The "message" attribute found on 
		the generated JSR-303 annotation is propagated via this message's <detail> -->
	<message key="invalid.field">
		<summary>Field {0} is invalid</summary>
		<detail>{1}</detail>
	</message>

	<message key="invalid.entity.key">
		<summary>An entity with key {0} could not be found.</summary>
	</message>

	<message key="bulk.operation.failed">
		<summary>The operation failed for the following ids {0}</summary>
	</message>
</messages>