<?xml version="1.0"?>
<!DOCTYPE service PUBLIC "-//FERMENTER//DTD SERVICE//EN" "https://bitbucket.org/cpointe/fermenter/downloads/fermenter-2-service.dtd">

<service>
	<name>CrossReferenceExample</name>	
	<documentation>A collection of operations that intermix local and remote metadata assets</documentation>
	<operations>
		<operation>
			<name>DoSomethingAndReturnARemoteEntity</name>
			<return-many>SimpleDomain</return-many>
			<transaction-attribute>Supports</transaction-attribute>
		</operation>
		<operation>
			<name>DoSomethingWithARemoteEntityParam</name>
			<return-many>LocalDomain</return-many>
			<parameters>
				<parameter>
					<name>remoteEntity</name>
					<documentation>A remote entity as an example</documentation>
					<type>SimpleDomain</type>
				</parameter>
			</parameters>
			<transaction-attribute>Supports</transaction-attribute>
		</operation>
	</operations>
</service>