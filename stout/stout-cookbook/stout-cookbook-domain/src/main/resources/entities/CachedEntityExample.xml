<?xml version="1.0"?>
<!DOCTYPE entity PUBLIC "-//FERMENTER//DTD ENTITY//EN" "https://bitbucket.org/cpointe/fermenter/downloads/fermenter-2-entity.dtd">

<entity>
    <name>CachedEntityExample</name>
    <namespace>org.bitbucket.askllc.fermenter.cookbook.domain</namespace>
    <documentation>Cached Entity Example used for testing caching in rest client.</documentation>
    <table>CACHED_ENTITY_EXAMPLE</table>

    <id>
        <field>
            <name>id</name>
            <type>uuid</type>
            <column>CACHED_ENTITY_ID</column>
            <required>true</required>
            <generator>uuid</generator>
        </field>
    </id>

    <fields>
        <field>
            <name>name</name>
            <documentation>Name for the cached entity.</documentation>
            <type>string</type>
            <column>NAME</column>
            <defaultValue>Some Name</defaultValue>
        </field>
        <field>
        	<name>calculatedField</name>
        	<documentation>A field that is calculated on each save call</documentation>
            <type>integer</type>
            <column>CALCULATED_FIELD</column>
            <defaultValue>0</defaultValue>
        </field>
    </fields>
</entity>