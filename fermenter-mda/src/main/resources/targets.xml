<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE targets PUBLIC "-//FERMENTER//DTD TARGETS//EN" "https://bitbucket.org/askllc/fermenter/downloads/targets.dtd">

<targets>

	<target name="serviceHtml"
		    generator="org.tigris.atlas.mda.generator.html.ServiceHtmlGenerator"
		    templateName="templates/service.html.vm"
		    outputFile="site/services/services.html"
		    overwritable="true"/>

	<target name="entityListHtml"
		    generator="org.tigris.atlas.mda.generator.html.ServiceHtmlGenerator"
		    templateName="templates/entities.html.vm"
		    outputFile="site/entities/entities.html"
		    overwritable="true"/>

	<target name="entityHtml"
		    generator="org.tigris.atlas.mda.generator.html.EntityHtmlGenerator"
		    templateName="templates/entity.html.vm"
		    outputFile="site/entities/${entityName}.html"
		    overwritable="true"/>

	<target name="enumerationHtml"
		    generator="org.tigris.atlas.mda.generator.html.EnumerationHtmlGenerator"
		    templateName="templates/enumeration.html.vm"
		    outputFile="site/enumerations/${enumerationName}.html"
		    overwritable="true"/>

	<target name="metadataHtml"
		    generator="org.tigris.atlas.mda.generator.html.ServiceHtmlGenerator"
		    templateName="templates/metadata.html.vm"
		    outputFile="site/metadata.html"
		    overwritable="true"/>

	<target name="metadataCss"
		    generator="org.tigris.atlas.mda.generator.html.ServiceHtmlGenerator"
		    templateName="templates/metadata.css.vm"
		    outputFile="site/metadata.css"
		    overwritable="true"/>
		    
</targets>
