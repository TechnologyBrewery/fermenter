<?xml version="1.0"?>
<!DOCTYPE service PUBLIC "-//FERMENTER//DTD SERVICE//EN" "https://bitbucket.org/cpointe/fermenter/downloads/fermenter-2-service.dtd">

<service>
	<name>EnumerationBased</name>
	<documentation>A service that uses enumerations as inputs and outputs for test purposes</documentation>
	<operations>
		<operation>
			<name>ReturnSingleEnumeratedValue</name>
			<return>SimpleDomainEnumeration</return>
			<transaction-attribute>Supports</transaction-attribute>
		</operation>
		<operation>
			<name>ReturnMultipleEnumeratedValue</name>
			<return-many>SimpleDomainEnumeration</return-many>
			<transaction-attribute>Supports</transaction-attribute>
		</operation>
		<operation>
			<name>PassInSingleEnumeratedValue</name>
			<return>void</return>
			<parameters>	
				<parameter>
					<name>enumeratedValue</name>
					<documentation>enumeration value</documentation>
					<type>SimpleDomainEnumeration</type>
				</parameter>
			</parameters>
		</operation>
		<operation>
			<name>PassInMultipleEnumeratedValues</name>
			<return>void</return>
			<parameters>	
				<parameter>
					<name>enumeratedValue</name>
					<documentation>enumeration value</documentation>
					<type>SimpleDomainEnumeration</type>
					<many>true</many>
				</parameter>
			</parameters>
		</operation>
	</operations>
</service>