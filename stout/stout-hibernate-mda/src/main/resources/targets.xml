<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE targets PUBLIC "-//FERMENTER//DTD TARGETS//EN" "https://bitbucket.org/askllc/fermenter/downloads/targets.dtd">

<targets>
		
	<target name="baseDataAccessObjectHibernateImpls"
			generator="org.bitbucket.fermenter.stout.mda.generator.entity.EntityJavaGenerator"
			templateName="templates/dao.hibernate.base.java.vm"
			outputFile="${basePackage}/persist/hibernate/${entityName}BaseDaoImpl.java"
			overwritable="true"/>
	
	<target name="dataAccessObjectHibernateImpls"
			generator="org.bitbucket.fermenter.stout.mda.generator.entity.EntityJavaGenerator"
			templateName="templates/dao.hibernate.java.vm"
			outputFile="${basePackage}/persist/hibernate/${entityName}DaoImpl.java"
			overwritable="false"/>
			
	<target name="hibernateMappings"
			generator="org.bitbucket.fermenter.stout.mda.hibernate.generator.entity.EntityHibernateGenerator"
			templateName="templates/mapping.hibernate.vm"
			outputFile="${basePackage}/${entityName}.hbm.xml"
			overwritable="true"/>
	
	<target name="ddlAntTaskGenerator"
		    generator="org.bitbucket.fermenter.stout.mda.generator.entity.EntityDdlGenerator"
		    templateName="templates/ddl.generation.ant.vm"
		    outputFile="ant/ddl-generation.xml"
		    overwritable="true"/>
	
	<target name="factoryPropertiesHibernate"
		    generator="org.bitbucket.fermenter.stout.mda.generator.factory.FactoryResourceGenerator"
		    templateName="templates/factory.properties.hibernate.vm"
		    outputFile="${basePackage}/factory.properties"
		    overwritable="true"
		    append="true"/>
	
	<target name="daoFactoryHibernate"
		    generator="org.bitbucket.fermenter.stout.mda.generator.factory.FactoryJavaGenerator"
		    templateName="templates/dao.factory.hibernate.impl.vm"
		    outputFile="${basePackage}/persist/hibernate/DaoFactoryImpl.java"
		    overwritable="true"/>
		    
	<target name="hibernateConfigXml"
		    generator="org.bitbucket.fermenter.stout.mda.generator.factory.FactoryResourceGenerator"
		    templateName="templates/hibernate.cfg.xml.vm"
		    outputFile="hibernate.cfg.xml"
		    overwritable="true"/>
		    
	<target name="hibernateProperties"
		    generator="org.bitbucket.fermenter.stout.mda.generator.factory.FactoryResourceGenerator"
		    templateName="templates/hibernate.properties.vm"
		    outputFile="hibernate.properties"
		    overwritable="false"/>
	
	<target name="resourcesPropertiesHibernate"
		    generator="org.bitbucket.fermenter.stout.mda.generator.factory.FactoryResourceGenerator"
		    templateName="templates/resources.properties.hibernate.vm"
		    outputFile="resources.properties"
		    overwritable="true"
		    append="true"/>
	
</targets>