<?xml version="1.0"?>
<!DOCTYPE formats PUBLIC "-//FERMENTER//DTD FORMATS//EN" "https://bitbucket.org/cpointe/fermenter/downloads/formats.dtd">

<formats>

	<format name="email">
		<pattern><![CDATA[^[\w-\.]+@([\w-]+\.)+[\w-]{2,4}$]]></pattern>
	</format>	

	<format name="ssn">
		<pattern><![CDATA[[0-9]{3}\-[0-9]{2}\-[0-9]{4}]]></pattern>
		<pattern><![CDATA[[0-9]{9}]]></pattern>
	</format>

	<format name="zipCode">
		<pattern><![CDATA[^\d{5}?$]]></pattern>
		<pattern><![CDATA[^\d{5}([\-]\d{4})?$]]></pattern>
	</format>
	
	<format name="quote">
		<pattern><![CDATA["{1,2}]]></pattern>
	</format>

</formats>