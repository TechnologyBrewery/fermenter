<?xml version="1.0"?>
<!DOCTYPE entity PUBLIC "-//FERMENTER//DTD ENTITY//EN" "https://bitbucket.org/cpointe/fermenter/downloads/fermenter-2-entity.dtd">

<entity>
	<name>BeerExampleEntity</name>
	<documentation>Entity to help with the Getting Started Guide</documentation>
	<table>BEER_ENTITY</table>

	<id>
		<field>
			<name>primaryKey</name>
			<type>uuid</type>
			<column>BEER_ENTITY_ID</column>
			<required>true</required>
			<generator>uuid</generator>
		</field>
	</id>

	<fields>
		<field>
			<name>beerType</name>
			<documentation>What kind of beer this is</documentation>
			<type>string</type>
			<column>BEER_TYPE</column>
		</field>
	</fields>

</entity>